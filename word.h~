// word.h
// declares class Word
// stores a word and pointer to the beginning of a linked list

#ifndef WORD_H
#define WORD_H

#include "list.h"
#include "itemtype.h"
#include <string>

using namespace std;

class Word {

 public:
  struct WordNode {
    Word* wordInfo = NULL;
    WordNode* nextWord = NULL;
  };
  Word(string word);
  void insertWord(string word, WordNode*& wordHead);
  string getWord();
  List* getFileList();

 private:
  string wordString;
  List* fileList;

};


#endif
