// itemtype.h
// declares class File
// stores file-name and number of times a word occured in the file

#ifndef ITEMTYPE_H
#define ITEMTYPE_H

#include <string>

using namespace std;

class File {

 public:
  File(string name);
  string getFileName();
  int getWordCount();
  void incrementWordCount();

 private:
  string fileName;
  int wordCount;

};

#endif
